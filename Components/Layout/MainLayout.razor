@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="d-flex align-items-center">
                <span class="navbar-text">🌐 Azure Services Management Hub</span>
                <div class="ms-auto">
                    <a href="https://portal.azure.com" target="_blank" class="btn btn-outline-primary btn-sm">Azure Portal</a>
                </div>
            </div>
        </div>

        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
